<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestsDetailsActivity2"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="FRENCHOPEDIA"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:fontFamily="@font/head"
            android:textSize="20dp"/>
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/layout"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <EditText
            android:id="@+id/provedt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Major"
            android:visibility="visible"
            android:editable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:cursorVisible="false"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp">
            <EditText
                android:id="@+id/firstnamaedt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:maxLength="25"
                android:layout_gravity="left"/>
            <EditText
                android:id="@+id/lastnamaedt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:maxLength="25"/>
        </LinearLayout>
        <Spinner
            android:id="@+id/genderedt"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:entries="@array/gender"
            android:imeOptions="actionNext"
            android:textSize="15dp"
            android:background="@drawable/spinnerbg"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/tempatlhredt"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:hint="Tempat"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:maxLength="100"/>
            <EditText
                android:id="@+id/dateOBedt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:imeOptions="actionNext"
                android:inputType="datetime"
                android:textSize="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:editable="false"/>
        </LinearLayout>
        <EditText
            android:id="@+id/alamatedt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat"
            android:imeOptions="actionNext"
            android:inputType="textMultiLine"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:lines="4"
            android:maxLines="5"/>
        <EditText
            android:id="@+id/telpedt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="telpon"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/emailedt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Spinner
            android:id="@+id/locationedt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/lokasi"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/spinnerbg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Spinner
            android:id="@+id/dayedt"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:entries="@array/day"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/spinnerbg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Spinner
            android:id="@+id/jamedt"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:entries="@array/jam"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/spinnerbg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/notedt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Note :"
            android:layout_marginBottom="30dp"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"
            android:maxLength="500"
            android:maxLines="10"
            android:lines="4"
            android:gravity="bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/update"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="UPDATE"
                android:background="@drawable/buttonedtx"
                android:layout_marginRight="10dp"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="DELETE"
                android:id="@+id/delete"
                android:background="@drawable/buttonedtx1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>