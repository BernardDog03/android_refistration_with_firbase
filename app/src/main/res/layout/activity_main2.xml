<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layoutgrad"
    tools:context=".MainActivity2"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4D000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/drawwer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:clickable="true"/>
            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="FRENCHOPEDIA"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:fontFamily="@font/head"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome To Frenchopedia"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/font"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nama"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp"
                android:fontFamily="@font/font"
                android:layout_marginLeft="15dp"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Class!"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/font"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:rowCount="2"
                android:columnCount="2"
                android:background="@drawable/layout"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:textAlignment="center">

                <LinearLayout
                    android:id="@+id/basicbtn"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:background="@drawable/layout"
                    android:clickable="true"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/flag"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Basic French"
                        android:textSize="20dp"
                        android:fontFamily="@font/head"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/greetbtn"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:background="@drawable/layout"
                    android:clickable="true"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/flag"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Greeting French"
                        android:textSize="20dp"
                        android:fontFamily="@font/head"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/expertbtn"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:background="@drawable/layout"
                    android:clickable="true"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/flag"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Expert French"
                        android:textSize="20dp"
                        android:fontFamily="@font/head"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/convbtn"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:background="@drawable/layout"
                    android:clickable="true"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:src="@drawable/flag"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Conversation"
                        android:textSize="20dp"
                        android:fontFamily="@font/head"/>
                </LinearLayout>
            </GridLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sidedrawwer"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:visibility="gone"
            android:layout_alignParentLeft="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:background="@drawable/bg">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"/>
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="70dp"
                    android:paddingLeft="10dp">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18dp"/>
                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15dp"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/exitdrawwer"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right"
                    android:src="@drawable/x"/>
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/homeside"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="    Home"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="1dp"
                        android:paddingLeft="5dp"
                        android:drawableLeft="@drawable/home"/>

                    <Button
                        android:id="@+id/kelas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="    Class"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="1dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="10dp"
                        android:drawableLeft="@drawable/kelas"
                        android:drawableRight="@drawable/down"/>
                    <LinearLayout
                        android:id="@+id/kelasopsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <Button
                            android:id="@+id/child"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Basic French"
                            android:drawableRight="@drawable/child"
                            android:gravity="center"
                            android:background="@color/colorPrimary"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginBottom="1dp"
                            android:paddingRight="5dp"/>
                        <Button
                            android:id="@+id/teen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Greeting French"
                            android:drawableRight="@drawable/teen"
                            android:gravity="center"
                            android:background="@color/colorPrimary"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginBottom="1dp"
                            android:paddingRight="5dp"/>
                        <Button
                            android:id="@+id/adult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Expert French"
                            android:drawableRight="@drawable/adult"
                            android:gravity="center"
                            android:background="@color/colorPrimary"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginBottom="1dp"
                            android:paddingRight="5dp"/>
                        <Button
                            android:id="@+id/conversation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Conversation"
                            android:drawableRight="@drawable/conver"
                            android:gravity="center"
                            android:background="@color/colorPrimary"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginBottom="2dp"
                            android:paddingRight="5dp"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/aboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="    About Us"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/info"
                        android:paddingLeft="5dp"
                        android:layout_marginBottom="1dp"/>
                    <Button
                        android:id="@+id/log_out"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="    Sign out"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/colorPrimaryDark"
                        android:gravity="center_vertical"
                        android:drawableLeft="@drawable/logout"
                        android:paddingLeft="5dp"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>